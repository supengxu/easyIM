<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="top.xxpblog.easyChat.api.dao.user.UserQqDao">

    <select id="findByOpenId" resultType="top.xxpblog.easyChat.common.entity.user.UserQq">
        SELECT uid
        FROM `user_qq`
        where openid=#{openId}
        limit 1
    </select>

    <insert id="insertUserQq" keyProperty="id" parameterType="top.xxpblog.easyChat.common.entity.user.UserQq">
        INSERT INTO user_qq(`uid`,openid,create_time)
        VALUES
        (#{uid},
        #{openid},
        #{createTime})
    </insert>

    <delete id="deleteByUid" parameterType="long">
        delete from `user_qq` where uid = #{uid}
    </delete>

</mapper>